{
  "private": true,
  "name": "textcat-ng",
  "version": "0.0.0",
  "type": "module",
  "packageManager": "yarn@4.12.0",
  "license": "GPL-3.0-or-later",
  "author": {
    "name": "Simon Legner",
    "email": "Simon.Legner@gmail.com"
  },
  "homepage": "https://gitlab.com/albina-euregio/textcat-ng",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/albina-euregio/textcat-ng.git"
  },
  "bugs": {
    "url": "https://gitlab.com/albina-euregio/textcat-ng/-/issues"
  },
  "scripts": {
    "prepare": "husky",
    "build": "vue-tsc --build & vite build",
    "build-editor": "vue-tsc --build & VITE_TEXTCAT_EDITOR=1 vite build",
    "dev": "vite",
    "dev-editor": "VITE_TEXTCAT_EDITOR=1 vite",
    "changelog": "conventional-changelog --infile CHANGELOG.md --same-file",
    "lint": "eslint",
    "test": "vitest run"
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "dependencies": {
    "@vueuse/core": "^14.0.0",
    "highlight-words-core": "^1.2.3",
    "idb-keyval": "^6.2.1",
    "vue": "^3.6.0-alpha.4"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.2",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/highlight-words-core": "^1.2.3",
    "@types/wicg-file-system-access": "^2023.10.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-typescript": "^14.6.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.49.0",
    "vite": "npm:rolldown-vite@^7.2.0",
    "vitest": "^4.0.7",
    "vue-tsc": "^3.0.4"
  }
}
